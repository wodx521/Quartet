<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="customTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorYellow</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/customTextAppearance</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">auto</item>
    </style>

    <style name="customTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>

    <style name="anim_up_down">
        <item name="android:windowEnterAnimation">@anim/menu_enter_up</item>
        <item name="android:windowExitAnimation">@anim/menu_exit_down</item>
    </style>
</resources>
